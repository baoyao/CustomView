<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyTitleView">
        <attr name="titleText" format="string" />
        <attr name="titleTextColors" format="color" />
        <attr name="titleBackground" format="color" />
        <attr name="titleTextSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension" />
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CustomImageView">
        <attr name="radius" format="dimension" />
        <attr name="types">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
            <enum name="circle_with_stroke" value="2" />
        </attr>
        <attr name="src" format="reference"></attr>
    </declare-styleable>
    <!-- 定义在外面的好处是：其他自定义控件也可以使用这些属性 -->
    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="circleWidth" format="dimension" />

    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="speed" format="integer" />
    </declare-styleable>
    <declare-styleable name="HorizontalPB">
        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />
        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_offset" format="dimension" />
        <attr name="progress_text_visibility" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="RoundPB">
        <attr name="progress_radius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CustomVolumControlBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="dotCount" format="integer" />
        <attr name="splitSize" format="integer" />
        <attr name="cb_bg" format="reference"></attr>
    </declare-styleable>
</resources>